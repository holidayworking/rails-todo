{
  "name": "rails-todo",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "lint": "run-p --aggregate-output --continue-on-error --print-label lint:*",
    "lint:eslint": "eslint --ext .ts,.vue app/packs",
    "lint:prettier": "prettier --check .",
    "lint:stylelint": "stylelint 'app/packs/**/*.vue'",
    "fix": "run-s fix:*",
    "fix:eslint": "yarn run lint:eslint --fix",
    "fix:prettier": "yarn run lint:prettier --write",
    "fix:stylelint": "yarn run lint:eslint --fix",
    "test": "jest",
    "deduplicate": "yarn-deduplicate"
  },
  "dependencies": {
    "@babel/preset-typescript": "7.13.0",
    "@rails/webpacker": "6.0.0-beta.7",
    "css-loader": "5.2.4",
    "css-minimizer-webpack-plugin": "2.0.0",
    "eslint": "7.26.0",
    "fork-ts-checker-webpack-plugin": "6.2.7",
    "html-webpack-harddisk-plugin": "2.0.0",
    "html-webpack-plugin": "5.3.1",
    "mini-css-extract-plugin": "1.6.0",
    "sass": "1.32.12",
    "sass-loader": "11.1.0",
    "typescript": "4.2.4",
    "vue": "2.6.12",
    "vue-loader": "15.9.7",
    "vue-template-compiler": "2.6.12",
    "webpack": "5.37.0",
    "webpack-cli": "4.7.0"
  },
  "devDependencies": {
    "@prettier/plugin-ruby": "1.5.5",
    "@types/jest": "26.0.23",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "@vue/test-utils": "1.2.0",
    "@webpack-cli/serve": "1.4.0",
    "babel-core": "7.0.0-bridge.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-vue": "7.9.0",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.0",
    "prettier-plugin-sh": "0.6.1",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-sass-guidelines": "8.0.0",
    "ts-jest": "26.5.6",
    "vue-jest": "3.0.7",
    "webpack-dev-server": "3.11.2",
    "yarn-deduplicate": "3.1.0"
  },
  "babel": {
    "presets": [
      "./node_modules/@rails/webpacker/package/babel/preset.js"
    ]
  },
  "browserslist": [
    "defaults"
  ],
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "parser": "vue-eslint-parser",
    "parserOptions": {
      "parser": "@typescript-eslint/parser",
      "project": "./tsconfig.eslint.json",
      "extraFileExtensions": [
        ".vue"
      ]
    },
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "extends": [
      "airbnb-typescript/base",
      "plugin:jest/all",
      "plugin:vue/recommended",
      "prettier"
    ],
    "rules": {
      "jest/lowercase-name": [
        "error",
        {
          "ignoreTopLevelDescribe": true
        }
      ]
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-sass-guidelines",
      "stylelint-config-prettier"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "vueIndentScriptAndStyle": true
  },
  "jest": {
    "roots": [
      "<rootDir>/app/packs"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "vue"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      ".*\\.(vue)$": "vue-jest"
    }
  }
}
